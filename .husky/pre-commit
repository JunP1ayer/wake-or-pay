#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running pre-commit checks..."

# Âûã„ÉÅ„Çß„ÉÉ„ÇØ
echo "üìù Type checking..."
pnpm typecheck
if [ $? -ne 0 ]; then
  echo "‚ùå FAIL: R-01 Type errors detected"
  exit 1
fi

# „É™„É≥„Éà
echo "üßπ Linting..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "‚ùå FAIL: R-04 Linting errors detected"  
  exit 1
fi

# „ÉÜ„Çπ„ÉàÂÆüË°å („ÉÜ„Çπ„Éà„Éï„Ç°„Ç§„É´„ÅåÂ≠òÂú®„Åô„ÇãÂ†¥Âêà„ÅÆ„Åø)
if [ -d "__tests__" ] || [ -d "tests" ] || [ -d "test" ]; then
  echo "üß™ Running tests..."
  pnpm test:run
  if [ $? -ne 0 ]; then
    echo "‚ùå FAIL: R-01 Test failures detected"
    exit 1
  fi
fi

# Á¶ÅÊ≠¢„Éë„Çø„Éº„É≥„ÅÆÊ§úÂá∫
echo "üö´ Checking for prohibited patterns..."

# R-02: Skip patterns
if find . -name "*.ts" -o -name "*.tsx" -o -name "*.js" -o -name "*.jsx" | grep -v node_modules | xargs grep -l "it\.skip\|describe\.skip\|test\.skip" 2>/dev/null; then
  echo "‚ùå FAIL: R-02 Skipped tests detected"
  exit 1
fi

# R-05: Temporary patches
if find . -name "*.ts" -o -name "*.tsx" -o -name "*.js" -o -name "*.jsx" | grep -v node_modules | xargs grep -l "TODO\|FIXME\|HACK" 2>/dev/null; then
  echo "‚ùå FAIL: R-05 Temporary patches detected"
  exit 1
fi

# R-03: Hardcoded responses (basic check)
if find . -name "*.ts" -o -name "*.tsx" | grep -v node_modules | xargs grep -l "const.*response.*=.*{" 2>/dev/null; then
  echo "‚ö†Ô∏è  WARNING: Potential hardcoded responses detected - manual review required"
fi

echo "‚úÖ All pre-commit checks passed!"
